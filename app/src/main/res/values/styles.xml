<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:colorPrimary">?android:attr/textColor</item>
        <item name="android:background">?toolbarColor</item>
    </style>

    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">?android:textColor</item>
        <item name="rippleColor">@android:color/darker_gray</item>
    </style>

    <style name="SnackBarStyle" parent="ThemeOverlay.Material3.Snackbar">
        <item name="backgroundTint">?colorPrimary</item>
    </style>

    <style name="SnackBarTextViewStyle" parent="Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">?android:textColor</item>
    </style>

    <style name="SnackBarButtonStyle" parent="Widget.Material3.Button.TextButton.Snackbar">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="strokeColor">?android:textColor</item>
        <item name="strokeWidth">@dimen/stroke</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?android:textColor</item>
        <item name="android:textColorHint">?android:textColor</item>
        <item name="materialThemeOverlay">@style/EditTextOverlay</item>
    </style>

    <style name="TextInputEditText" parent="@style/Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">?android:textColor</item>
        <item name="android:textColorHighlight">?colorAccent</item>
    </style>

    <style name="EditTextOverlay" parent="ThemeOverlay.Design.TextInputEditText">
        <item name="editTextStyle">@style/TextInputEditText</item>
    </style>

</resources>